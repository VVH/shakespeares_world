.transcribe-dialog
    @extend .panel
    @extend .panel-default
    position: absolute
    width: 550px
    z-index: 1

    > .heading
        @extend .panel-heading
        @extend .panel-default > .panel-heading
        cursor: move
        display: flex

    > .heading > .title
        @extend .panel-default > .panel-heading
        @extend .panel-title
        flex: 1
        line-height: 23px

    > .heading > .close
        cursor: pointer

    > .heading > .close > .icon
        @extend .glyphicon
        @extend .glyphicon-remove-circle

    > .heading > .close > .text
        @extend $hide-text

    > .body
        @extend .panel-body

    > .body > .transcribe
        @extend .form-control
        @extend textarea.form-control
        margin-bottom: 15px

    > .body > .buttons
        display: flex
        justify-content: space-between

    > .body > .buttons .button
        @extend .btn

    > .body > .buttons .button.-save
        @extend .btn-success

    > .body > .buttons .button.-tag
        margin-right: 5px
