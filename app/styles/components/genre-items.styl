.genre-items
    font-size: 18px

    > .title
        background-color: orange
        font-weight: bold
        padding-bottom: 15px
        padding-top: 15px

    > .body
        background-color: #39403e

    > .body > .container > .row
        padding-bottom: 15px
        padding-top: 15px
        color: #fff

    // Common sizes for title and body
    .row > .name
        @extend .col-sm-5
        @extend .col-sm-push-1

    .row > .date
        @extend .col-sm-2
        @extend .col-sm-push-1

    .row > .items
        @extend .col-sm-1
        @extend .col-sm-push-1

    .row > .action
        @extend .col-sm-2
        @extend .col-sm-push-1

    .row > .action > .link
        @extend .btn
        @extend .btn-primary
        font-weight: bold
    .row > .noitems
        @extend .col-sm-10
        @extend .col-sm-push-1
