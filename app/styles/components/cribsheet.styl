.cribsheet-panel
    @extend .panel
    @extend .panel-default
    background-color: rgba(245,245,245,0.5)
    display: none
    position: absolute
    right: 0
    top: 0
    width: 30%
    height: 100%
    z-index: 1

    > .heading
        @extend .panel-heading
        @extend .panel-default > .panel-heading
        cursor: move
        display: flex

    > .heading > .title
        @extend .panel-default > .panel-heading
        @extend .panel-title
        flex: 1
        line-height: 23px

    > .body
        @extend .panel-body
        @extend .row
        max-height: 100%
        overflow: auto
