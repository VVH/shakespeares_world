.home-jumbotron
    @extend .jumbotron
    background: none
    margin: 60px auto
    position: relative
    width: 75%

    > .bg
        background: #f0f0f0
        border-radius: 6px
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0
        z-index: 0

    > .text
        position: relative
        z-index: 1

    > .text > p
        margin-bottom: 30px

    > .text > .btn
        margin: 0 auto
