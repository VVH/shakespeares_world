.home-jumbotron
    @extend .jumbotron
    text-align: center
    background: none
    margin: 150px auto
    position: relative
    width: 75%

    > .bg
        border-radius: 6px
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0
        z-index: 0

    > .text
        position: relative
        z-index: 1

    > .text > .separator
        border-bottom: 4px solid
        margin: 0 auto
        width: 5%

    > .text > .btn
        margin: 0 auto

    > .text > h1
        font-weight: 200

    > .text > h3
        margin-bottom: 30px
        text-transform: uppercase

    > .text > p
        margin-bottom: 30px
        font-size: 20px
        font-weight: 200

