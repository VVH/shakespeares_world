.banner-with-logos
    background: dark-grey
    color: wheat
    text-align: center
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: stretch
    padding: 1em 0
    
    .logo
        width: 20%
        display: flex
        justify-content: center
        align-items: center
        min-width: 200px
        margin: 1em 2em
        padding: 1em
        background: #fff
        border-radius: 1em
        
        img
            display: block
            width: 100%
