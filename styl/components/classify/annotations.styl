.temp-text-annotation
    opacity: 0.4
    -webkit-animation: pulse 0.5s ease-in-out
    -webkit-animation-iteration-count: infinite
    -webkit-transform-origin: center
    -webkit-animation-direction: alternate
    fill: #ED303C
    &.hover
        cursor: move

.text-annotation
    opacity: 0.4
    fill: #F5634A
    &.hover
        cursor: pointer
        opacity: 0.8

.temp-image-annotation
    opacity: 0.4
    fill: dark-blue

.image-annotation

    rect
        opacity: 0.4
        fill: blue

    .image-annotation-delete
        cursor: pointer
        display: none !important
        fill: red
    &.edit
        .image-annotation-delete
            display: block  !important
    &.hover
        cursor: pointer

.text-annotation-edit
    background-color: #fff
    border-radius: 6px
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5)
    color: black
    position: absolute
    width: 400px

    .btn-toolbar
        @extend $clearfix
        border-top: 1px solid #e5e5e5
        margin-left: 0
        padding: 15px

        .editing
            float: left
            margin-left: 0
        .save-close
            float: right

    .text-entry
        padding: 15px

    &.dragging
        cursor: move


@-webkit-keyframes pulse
    0%
        -webkit-transform: scale(0.8)
    100%
        -webkit-transform: scale(1)

