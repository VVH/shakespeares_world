.text-annotation-edit
    background-color: #fff
    border-radius: 6px
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5)
    color: black
    position: absolute
    width: 550px
    padding: 15px

    &.is-dragging
        cursor: move

    > *
        position: relative

    > .draghandle
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

    > .text
        padding-bottom: 15px

    > .btn-toolbar
        @extend $clearfix
        border-top: 1px solid #e5e5e5
        margin-left: 0
        padding-top: 15px

    > .btn-toolbar > .editing
            float: left
            margin-left: 0

    > .btn-toolbar > .save-close
            float: right

    > .delete
        position: absolute
        top: -10px
        right: -10px
